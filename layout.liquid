<!doctype html>
<html lang="{{ page.locale }}">
	<head>
		<meta charset="utf-8">
		<link rel=stylesheet href="/style.css">
		<!--
		TODO: Favicons!

		Icon generation:
		magick convert profile2.png -strip -resize 192x192^ -gravity Center -crop 192x192+0+0 -dither None -colors 64 apple-touch-icon.png
		optipng apple-touch-icon.png -o7 -zm1-9
		magick convert apple-touch-icon.png -dither None -resize 48x48 -colors 24 favicon.png
		optipng favicon.png -o7 -zm1-9
		magick convert favicon.png -flatten -dither None -colors 16 icon.ico

		-->
		<link rel="icon" sizes="48x48" href="/favicon.png">
		<link rel="icon" sizes="192x192" href="/apple-touch-icon.png">
		<meta name=viewport content="width=device-width,initial-scale=1">

		<title>{{ page.title }}</title>
		{% if page.description %}
			<meta name=description content="{{ page.description}}">
		{% endif %}

		{% if page.og_image %}
			<meta property=og:title content="{{ page.title }}">
			<meta property=og:type content="{{ page.og_type }}">
			<meta property=og:url content="{{ site.url_stub }}/{{ page.filename_url }}">
			<meta property=og:image content="{{ page.og_image }}">
			{% if page.og_audio %}
				<meta property=og:audio content="{{ page.og_audio }}">
			{% endif %}
			{% if page.og_video %}
				<meta property=og:video content="{{ page.og_video }}">
			{% endif %}
			<meta property=og:site_name content="{{ site.name }}">
			{% if page.description %}
				<meta property=og:description content="{{ page.description }}">
			{% endif %}
			<meta property=og:locale content="{{ page.locale }}">
		{% endif %}

		{% if page.allow_robots != true %}
			<meta name=robots content=noindex,nofollow>
		{% endif %}

		{% if page.is_nsfw %}
			<meta name=rating content=adult>
		{% endif %}
	</head>
	<body>
		<input type=checkbox style=display:none id=toggle>
		<header>
			<a href=index.html><p>{{ site.name }}</p></a>
			<a href=javascript:void(0)><label for=toggle aria-label="Toggle main menu"><span>{{ page.title }}</span></label></a>
			<nav>
				{% if page.filename_raw == "index.html" %}
					<a class=active href=index.html><p>Home</p></a>
				{% else %}
					<a href=index.html><p>Home</p></a>
				{% endif %}
				{% for page_ in site.pages %}
					{% if page_.filename_raw == "index.html" %}
						{% continue %}
					{% endif %}
					{% if page_.filename_raw == page.filename_raw %}
						<a class=active href="{{ page_.filename_url }}"><p>{{ page_.title }}</p></a>
					{% else %}
						<a href="{{ page_.filename_url }}"><p>{{ page_.title }}</p></a>
					{% endif %}
				{% endfor %}
			</nav>
		</header>
		<article>
			{{ page.data }}
		</article>
		<footer>
		</footer>
	</body>
</html>
